{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/suggestions/.*",
      "dest": "backend/suggestions.js"
    },
    {
      "src": "/api/.*",
      "dest": "backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/public/index.html"
    }
  ]
}
